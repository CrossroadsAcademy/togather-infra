apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: auth-service-admin-route
  labels:
    app: togather
    service: auth-srv
    jwt: enabled
    ratelimitGlobal: enabled
spec:
  parentRefs:
    - name: togather-gateway
      namespace: envoy-gateway
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: <path>
        - path:
            type: PathPrefix
            value: <path>
      backendRefs:
        - name: auth-srv
          port: 3000
